<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: RED;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.logreg.TrainTicketingController">
    <children>
        <Label layoutX="100.0" layoutY="50.0" text="Destination:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <ComboBox fx:id="destinationComboBox" layoutX="200.0" layoutY="50.0" prefWidth="150.0" promptText="enter your destination" />
        <Label layoutX="100.0" layoutY="100.0" text="Time:">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Label>
        <ComboBox fx:id="timeComboBox" layoutX="200.0" layoutY="100.0" prefWidth="150.0" promptText="enter your time" />
        <Label layoutX="100.0" layoutY="150.0" text="Train:">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Label>
        <ComboBox fx:id="trainComboBox" layoutX="200.0" layoutY="150.0" prefWidth="150.0" promptText="choose your train" />
        <Button fx:id="bookTicketButton" layoutX="200.0" layoutY="200.0" text="Book  your Ticket" />
    </children>
    </AnchorPane>
